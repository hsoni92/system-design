# ============================================================
# AZURE IDENTITY (for DefaultAzureCredential)
# Used for Key Vault and when you want to avoid connection strings
# Interview: Local = env vars, Azure = Managed Identity
# ============================================================
AZURE_TENANT_ID=
AZURE_CLIENT_ID=
AZURE_CLIENT_SECRET=

# ============================================================
# AZURE SQL (relational - connection string for mssql driver)
# Format: Server=...;Database=...;User Id=...;Password=...;Encrypt=true;
# ============================================================
AZURE_SQL_CONNECTION_STRING=

# ============================================================
# COSMOS DB (NoSQL - endpoint + key, or use DefaultAzureCredential)
# ============================================================
COSMOS_ENDPOINT=
COSMOS_KEY=

# ============================================================
# SERVICE BUS (messaging - connection string)
# ============================================================
SERVICE_BUS_CONNECTION_STRING=

# ============================================================
# KEY VAULT (URL only - auth via DefaultAzureCredential)
# ============================================================
KEY_VAULT_URL=

# ============================================================
# APPLICATION INSIGHTS (telemetry connection string)
# ============================================================
APPINSIGHTS_CONNECTION_STRING=

# ============================================================
# ENTRA ID (for JWT validation - optional; set to skip auth)
# ============================================================
ENTRA_ISSUER=          # e.g. https://login.microsoftonline.com/{tenant-id}/v2.0
ENTRA_AUDIENCE=        # Application (client) ID of this API
ENTRA_JWKS_URI=        # https://login.microsoftonline.com/{tenant-id}/discovery/v2.0/keys?appid={client-id}
SKIP_AUTH=false        # Set true to disable JWT validation (local dev only)
